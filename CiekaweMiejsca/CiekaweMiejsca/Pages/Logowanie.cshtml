@page
@model CiekaweMiejsca.Pages.LogowanieModel
@{
}
<h1>Logowanie</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Login</label>
                <input asp-for="Uzytkownik.login" class="form-control" />
                <span asp-validation-for="Uzytkownik.login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Hasło</label>
                <input asp-for="Uzytkownik.haslo" class="form-control" />
                <span asp-validation-for="Uzytkownik.haslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zaloguj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}